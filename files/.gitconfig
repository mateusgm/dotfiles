	email = mateus@uololou.com.br
[alias]
	cia = commit -a -m
	co = checkout
	st = status -s
	br = branch
	lg = log --oneline
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	editor = vim
	autocrlf = input
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[push]
	default = simple
[merge]
	tool = meld
