# General .alias file
#
alias vi=vim
alias ls='ls --color=yes'
alias grep='grep --color'
alias tailerror='DATE=`date +%Y-%m-%d`;tail -vf `find /var/log/ -type f -name error\*log -o -name error\*log.$DATE 2>/dev/null`'
alias tailaccess='DATE=`date +%Y-%m-%d`;tail -vf `find /var/log/ -type f -name access\*log -o -name access\*log.$DATE 2>/dev/null`'

# custom commands

alias nb='ipython notebook --ip=\* --port=8897'

alias pbcopy='ssh localhost -p 2222 pbcopy'
alias pbpaste='ssh localhost -p 2222 pbpaste'

alias fixssh='export $(tmux showenv SSH_AUTH_SOCK)'
alias bqx='bq query --nouse_legacy_sql'

# Set pane title to current command or directory
 panetitle() { printf '\033]2;%s\033\\\033' "$1" }
